{
  "name": "vue-ios13-segmented-control",
  "version": "1.0.5",
  "description": "Vue.js radio button component inspired by the new skeuomorphic segmented control in iOS 13",
  "repository": "https://github.com/AnalyzePlatypus/vue-ios13-segmented-control",
  "main": "dist/vue-ios13-segmented-control.ssr.js",
  "module": "dist/vue-ios13-segmented-control.esm.js",
  "unpkg": "dist/vue-ios13-segmented-control.min.js",
  "files": [
    "dist/*",
    "src/**/*.vue"
  ],
  "scripts": {
    "serve": "vue serve ./dev/DevWorkspace.vue",
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
    "build:demo": "cd demo-site &&  NODE_ENV=production npm run build",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "minimist": "^1.2.5",
    "node-sass": "^7.0.0",
    "rollup": "^1.32.1",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "sass-loader": "^8.0.2",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11"
  }
}
